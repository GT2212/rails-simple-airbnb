<%= link_to "New Flat", new_flat_path, class: "btn btn-primary" %>

<h1>All Available Flats</h1>

<div class="flats">
  <% @flats.each do |flat| %>
    <div class="flat">
      <h2><%= flat.name %></h2>
      <p><%= flat.address %></p>
      <p><%= flat.description %></p>
      <p>Price per night: <%= flat.price_per_night %></p>
      <p>Number of guests: <%= flat.number_of_guests %></p>
      <%= link_to "View Details", flat_path(flat), class: "btn btn-primary" %>
      <%= link_to "Edit", edit_flat_path(flat), class: "btn btn-secondary" %>
      <%= link_to "Delete", flat_path(flat), method: :delete, data: { confirm: "Are you sure you want to delete this flat?" }, class: "btn btn-danger" %>    </div>
  <% end %>
</div>
